{%- assign nodeCurrent = page.url | urlToNote: notesOnly -%}
{%- assign crumbs = nodeCurrent | noteParents: notesOnly | split: ','  -%}

{%- for id in crumbs -%}
    <li class="breadcrumb-nav-list-item">
      {%- if id == nodeCurrent.id -%}
        {{ notesOnly[id].title }}
      {%- else -%}
        <a href="{{ notesOnly[id] | noteURL | absolute_url }}">{{ notesOnly[id].title }}</a>
      {%- endif -%}
    </li>
{%- endfor -%}
